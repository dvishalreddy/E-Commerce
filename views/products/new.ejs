    <div class="container mt-5 pt-5">
        <div class="row">
            <div class="col col-lg-3">
                <h3 style="font-weight: 400;">Add Product</h3>
            </div>
            <div class="col col-lg-9">
                <form action="/products" method="POST">
                    <div class="mb-3">
                        <label for="name" class="form-label">Product Name</label>
                        <input type="text" class="form-control" name="name" id="" placeholder="">
                    </div>
                    <!-- <div class="mb-3">
                        <label for="price" class="form-label">Product Price</label>
                        <input type="number" class="form-control" name="price" id="" placeholder="">
                    </div> -->
                    <div class="mb-3">
                        <label for="price" class="form-label">Product Price</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                              <span class="input-group-text">$</span>
                            </div>
                            <input type="text" class="form-control" name = "price" id="" aria-label="Amount (to the nearest dollar)">
                            <div class="input-group-append">
                              <span class="input-group-text">.00</span>
                            </div>
                          </div>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Image URL</label>
                        <input type="text" class="form-control" name="image" id="">
                    </div>
                    <div class="mb-3">
                        <label for="category" class="form-label">Select Category</label>
                        <select name="category" class="form-control" id="">
                            <option value="wallet">Wallet</option>
                            <option value="bag">Bag</option>
                            <option value="watch">Watch</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Product Description</label>
                        <textarea type="text" class="form-control" name="description" placeholder=""></textarea>
                    </div>
                    <div class="mb-3">
                        <button class="btn btn-dark">Add Product</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="footer">
        <div class="container">
            <div class="row">
                <div class="col col-12 col-md-4 my-5 text-center">
                  <h4><a href="#" style="color: black;">Shipping</a></h4>
